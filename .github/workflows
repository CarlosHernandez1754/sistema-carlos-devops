name: Ejecutar Pruebas Automatizadas

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
    - name: Clonar el repositorio
      uses: actions/checkout@v3

    - name: Configurar JDK 17
      uses: actions/setup-java@v3
      with:
        java-version: '17'
        distribution: 'temurin'

    - name: Pruebas - usuarios-servicio
      run: mvn -B test --file usuarios-servicio/usuarios-servicio/usuarios-servicio/usuarios-servicio/pom.xml

    - name: Pruebas - asignaturas-servicio
      run: mvn -B test --file asignaturas-servicio/asignaturas-servicio/asignaturas-servicio/pom.xml

    - name: Pruebas - matriculas-servicio
      run: mvn -B test --file matriculas-servicio/matriculas-servicio/matriculas-servicio/pom.xml
